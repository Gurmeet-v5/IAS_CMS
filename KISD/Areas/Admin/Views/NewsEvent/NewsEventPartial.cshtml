               if (EncryptDecrypt.Decrypt(TypeMasterID) == Convert.ToInt32(NewsEventTypeAlias.Events).ToString() || EncryptDecrypt.Decrypt(TypeMasterID) == Convert.ToInt32(NewsEventTypeAlias.ManageEvents).ToString())
