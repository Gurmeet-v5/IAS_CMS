@model KISD.Areas.BlogAdmin.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/BlogAdmin/Views/Shared/_Layout.cshtml";
    var message = TempData["AlertMessage"] ?? string.Empty;    
}
@using (Html.BeginForm("ChangePassword", "Account"))
{
    
    <div class="breadcrumb">
        <!-- Breadcrumb -->
        <ul>
            <li>
                <i class="icon-home"></i>
                <a  id = "ankdahboard" href='@Url.Action("Index", "Home")'>Dashboard</a>
            </li>
            <li>Change Password
            </li>
        </ul>
    </div>
    <!-- Breadcrumb Ends --> 
    
    <div class="page-header">
        <!-- page-header -->
        <div class="page-title">
        </div>
    </div> 

    <div class="wrapper">
        <!-- Wrapper -->
        <div class="widget">
            <!-- widget -->
            <div class="widget-header">
                <!-- widget-header -->
                <h4><i class="icon-reorder"></i>Change Password </h4>
                <div class="btn-group">
                </div>
            </div>
            <div class="row">
                <div class="col40">
                    @{ Html.EnableClientValidation(); }
                </div>
            </div>
            <div class="row">
                <div class="col20">
                    <label>
                        Old Password:<span class="requiredstar">*</span>

                    </label>
                </div>
                <div class="col40">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "required passwordvalidate textbox", maxlength = "20", @placeholder = "Maximum 20 characters"  })
                    <br />
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
            </div>

            <div class="row">
                <div class="col20">
                    <label>
                        New Password:<span class="requiredstar">*</span>

                    </label>
                </div>
                <div class="col40">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "required passwordvalidate textbox", maxlength = "20", @placeholder = "Maximum 20 characters"  })
                    <br />
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>

            <div class="row">
                <div class="col20">
                    <label>
                        Confirm New Password:<span class="requiredstar">*</span>

                    </label>
                </div>
                <div class="col40">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "required passwordvalidate textbox", maxlength = "20", @placeholder = "Maximum 20 characters"  })
                    <br />
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="row">
                <div class="col20">&nbsp;</div>
                <div class="col40">
                    <input type="submit" value="Save" class="submit-btn btn-class submit" id="btnsave" />
                    &nbsp;&nbsp;&nbsp;
                            
                                            <input type="submit" id="btncancel" name="command" value="Cancel"
                                                class="cancel cancel-btn btn-class" />

                </div>
            </div>



        </div>
    </div>


    
}
<script src="~/Scripts/js/jquery-1.10.2.js"></script>
<script src="~/Scripts/js/jquery.jgrowl.min.js" type="text/javascript"></script>
<script src="~/Scripts/js/jquery.validate.js"></script>
<script src="~/Scripts/js/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">
    $("#OldPassword").focus();
    var message = '@message';

    if (message)
        $.jGrowl(message, true);

</script>

