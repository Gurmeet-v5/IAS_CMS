        </div>
    </div>
    <div class="wrapper">
        <!-- Wrapper -->
        <div class="widget">
            <!-- widget -->
            <div class="widget-header">
                <!-- widget-header -->
                <h4><i class="icon-reorder"></i>@Html.Raw(string.Format(@ViewBag.Title))</h4>
                @*<div class="btn-group">

