}
            <div class="row">
                <div class="col20">
                    <label>
                        Display Start Date:
                    </label>
                </div>
                <div class="col40" id="divCreatedDate">
                    @Html.TextBoxFor(m => m.DisplayStartDate, new
               {
                   @Value = ViewBag.StartDateStr,
                   maxlength = "20",
                   @class = "nospace datetimepicker",
                   @placeholder = "MM/DD/YYYY hh:mm",
